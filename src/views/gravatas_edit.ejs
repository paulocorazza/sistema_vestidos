<%- include('partials/_header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card border-primary">
        <div class="card-header text-center">
          <h1> Atualizar gravata</h1>
        </div>
        <div class="card-body border-primary">
          <form action="/gravatas/update/<%=data.codigo%>" method="POST">
            <div class="form-group">
              <div class="text-center">
                <img src="/fotos/gravatas/<%=data.foto%>" class="img-thumbnail" style="height: 150px; width: 200px;"
                  alt="">
              </div>
              <p></p>
              <% if (!data.foto) { %>
              <i class="fas fa-image"></i>
              <label for="foto">Foto:</label>
              <input type="file" name="foto" id="foto" value="<%= data.foto%>" class="form-control">
              <% } %>

            </div>
            <div class="form-group">
              <label for="nome">Código:</label>
              <input type="text" name="codigo" placeholder="Digite o código" value="<%= data.codigo%>"
                class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <i class="fas fa-palette"></i>
              <label for="endereço">Cor:</label>
              <input type="text" name="cor" value="<%= data.cor%>" class="form-control">
            </div>
            <div class="form-group">
              <i class="fas fa-money-bill-alt"></i>
              <label for="valor_aluguel">Valor de Aluguel</label>
              <class class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">R$</span>
                </div>
                <input type="number" name="valor_aluguel" placeholder="Digite o valor de aluguel"
                  value="<%= data.valor_aluguel%>" class="form-control" required>
              </class>
            </div>
            <div class="form-group">
              <i class="fas fa-money-bill-alt"></i>
              <label for="valor_aluguel">Valor de Compra</label>
              <class class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">R$</span>
                </div>
                <input type="number" name="valor_compra" value="<%= data.valor_compra%>" class="form-control" required>
              </class>
            </div>

            <div class="form-group">
              <i class="fas fa-sort-numeric-up"></i>
              <label for="tamanho">Tamanho:</label>
              <input type="number" name="tamanho" placeholder="Tamanho do gravata" value="<%= data.tamanho%>"
                class="form-control" required>
            </div>
            <div class="form-group">
              <i class="fas fa-clipboard-list"></i>
              <label for="cars">Status:</label>
              <select class="form-control" name="status" value="<%= data.status%>" required>
                <option value="disponível" <%= data.status == 'disponível' ? 'selected' : ''%>>disponível</option>
                <option value="alugado" <%= data.status == 'alugado' ? 'selected' : ''%>>alugado</option>
                <option value="lavanderia" <%= data.status == 'lavanderia' ? 'selected' : ''%>>lavanderia</option>
                <option value="vendido" <%= data.status == 'vendido' ? 'selected' : ''%>>vendido</option>
                <option value="promoção" <%= data.status == 'promoção' ? 'selected' : ''%>>promoção</option>
              </select>
            </div>
            <div class="form-group">
              <i class="fas fa-money-bill-alt"></i>
              <label for="valor_aluguel">Valor de Promoção</label>
              <class class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">R$</span>
                </div>
                <input type="number" name="valor_promocao" value="<%= data.valor_promocao %>"  placeholder="Digite o valor promocional" class="form-control" required>
              </class>
            </div>
        </div>

        <div class="card-footer">
          <button type="submit" class="btn btn-success btn-block"><i class="fas fa-save"></i> Salvar gravata</button>
          <a href="/gravatas" class="btn btn-warning btn-block">Voltar</a>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>


<% include partials/_footer %>